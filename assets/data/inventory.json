// assets/js/inventory.js
// Loads live quantities from assets/data/inventory.json into window.INVENTORY
window.INVENTORY = {};
(function loadInventory(){
  const url = `assets/data/inventory.json?v=${Date.now()}`;
  fetch(url, { cache: 'no-store' })
    .then(r => r.ok ? r.json() : {})
    .then(data => { window.INVENTORY = data || {}; })
    .catch(() => { window.INVENTORY = {}; });
})();